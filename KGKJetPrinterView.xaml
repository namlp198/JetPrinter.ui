<UserControl x:Class="JetPrinter.ui.KGKJetPrinterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:JetPrinter.ui"
             xmlns:vm="clr-namespace:JetPrinter.ui"
             d:DataContext="{d:DesignInstance vm:KGKJetPrinterView}"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="450"
             Background="WhiteSmoke">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/JetPrinter.ui;component/Themes.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="2.8*" />
            <RowDefinition Height="1.9*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                CornerRadius="5"
                BorderBrush="LightGray"
                BorderThickness="5"
                Margin="5 5 5 0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.1*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Opacity="{Binding ConnectionState, Converter={StaticResource ConnectionStateToOpacityConverter}}">
                        <Image Source="{Binding PrintHeadState, Converter={StaticResource PrinterStateToPrinterImagePathConverter}}"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Center"
                               Margin="5 10 5 5"
                               Stretch="Uniform"
                               Width="auto"
                               Height="auto" />
                        <TextBlock VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Margin="12 30 0 0"
                                   Text="{Binding PrinterName}"
                                   FontSize="12"
                                   Foreground="OrangeRed"
                                   FontWeight="Bold"/>
                    </Grid>
                    <StackPanel Orientation="Vertical"
                                Grid.Row="1"
                                Margin="0 5 0 10">
                        <Button Style="{StaticResource NewPopupButtonStyle}"
                                Background="{Binding ConnectionState, Converter={StaticResource ConnectionStateToButtonBackgroundConverter}}"
                                Width="125"
                                Height="30"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Margin="5"
                                Content="{Binding ConnectionState, Converter={StaticResource ConnectionStateToButtonContentConverter}}"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="White"
                                x:Name="btnConnection"
                                Click="btnConnection_Click" />
                        <Label Width="auto"
                               Height="auto"
                               Margin="2"
                               VerticalContentAlignment="Center"
                               HorizontalContentAlignment="Left">
                            <Label.Content>
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{Binding ConnectionState, Converter={StaticResource ConnectionStateToImagePathConverter}}"
                                               Margin="5 5 0 5"
                                               Width="20"
                                               Height="20" />
                                        <TextBlock Text="{Binding ConnectionState, Converter={StaticResource ConnectionStateToStringConverter}}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   Margin="5 2 2 2" />
                                    </StackPanel>
                                </Grid>
                            </Label.Content>
                        </Label>
                        <Label Width="auto"
                               Height="auto"
                               Margin="2"
                               VerticalContentAlignment="Center"
                               HorizontalContentAlignment="Left">
                            <Label.Content>
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{Binding PrintHeadState, Converter={StaticResource PrinterStateToIndicatorImagePathConverter}}"
                                               Margin="5 5 0 5"
                                               Width="20"
                                               Height="20" />
                                        <TextBlock Text="{Binding PrintHeadState, Converter={StaticResource PrinterStateToStringConverter}}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   Margin="5 2 2 2" />
                                    </StackPanel>
                                </Grid>
                            </Label.Content>
                        </Label>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="1.5*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <StackPanel Orientation="Vertical"
                                    Margin="0 2 0 0">
                            <TextBlock Text="Bản tin hiện tại:"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="5 2 2 2"
                                       TextAlignment="Center" />
                            <TextBlock Text="{Binding CurrentMessage}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       FontStyle="Normal"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Margin="5 2 2 2"
                                       TextAlignment="Center" />
                            <TextBlock Text="Nội dung bản tin:"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="5 2 2 2"
                                       TextAlignment="Center" />
                            <TextBlock Text=""
                                       Name="tbContentMessage"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       FontStyle="Normal"
                                       Foreground="OrangeRed"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Margin="5 2 2 2"
                                       TextAlignment="Center" 
                                       TextWrapping="Wrap"/>
                            <TextBlock Text="Số đếm in:"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="5 2 2 2"
                                       TextAlignment="Center"
                                       Visibility="Hidden"/>
                            <TextBlock Text="{Binding PrintCount}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       FontStyle="Normal"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Margin="5 2 2 2"
                                       TextAlignment="Center"
                                       Visibility="Hidden" />
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="1">
                        <GroupBox Header="Trạng thái máy in"
                                  FontSize="14"
                                  FontWeight="Bold">
                            <Grid Margin="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition Height="0.9*"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0"
                                       Margin="2"
                                       VerticalContentAlignment="Center"
                                       HorizontalContentAlignment="Left">
                                    <Label.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="20"
                                                   Height="25"
                                                   Stretch="Fill"
                                                   Source="{Binding InkTankState, Converter={StaticResource LiquidQuantityStateToIndicatorImagePathConverter}}"/>
                                            <TextBlock Margin="10 0 0 0"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Text="Bình Mực"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Label.Content>
                                </Label>
                                <Label Grid.Row="1"
                                       Margin="2"
                                       VerticalContentAlignment="Center"
                                       HorizontalContentAlignment="Left">
                                    <Label.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="20"
                                                   Height="25"
                                                   Stretch="Fill"
                                                   Source="{Binding SolventTankState, Converter={StaticResource LiquidQuantityStateToIndicatorImagePathConverter}}" />
                                            <TextBlock Margin="10 0 0 0"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Text="Bình Dung Môi"
                                                       VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Label.Content>
                                </Label>
                                <Label Grid.Row="2"
                                       Margin="2"
                                       Visibility="Visible"
                                       VerticalContentAlignment="Center"
                                       HorizontalContentAlignment="Left">
                                    <Label.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="20"
                                                   Height="25"
                                                   Stretch="Fill"
                                                   Source="{Binding MainTankState, Converter={StaticResource LiquidQuantityStateToIndicatorImagePathConverter}}" />
                                            <TextBlock Margin="10 0 0 0"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Text="Bình Chính"
                                                       VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Label.Content>
                                </Label>
                                <Label Grid.Row="3"
                                       Margin="2"
                                       VerticalContentAlignment="Center"
                                       HorizontalContentAlignment="Left">
                                    <Label.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Margin="0 0 0 0"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Text="Độ Nhớt:"
                                                       VerticalAlignment="Center" />
                                            <TextBlock Margin="10 0 0 0"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="{Binding ViscosityState, Converter={StaticResource ViscosityStateToForeground}}"
                                                       Text="{Binding ViscosityState, Converter={StaticResource ViscosityStateToString}}"
                                                       VerticalAlignment="Center"
                                                       TextAlignment="Left"/>
                                        </StackPanel>
                                    </Label.Content>
                                </Label>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
        <Border Grid.Row="1"
                BorderBrush="LightGray"
                BorderThickness="5"
                CornerRadius="5"
                Margin="5 5 5 5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.4*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Nhập bản tin:"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="5 5 2 2"
                                   TextAlignment="Center" />
                        <TextBox Margin="2 5 2 2"
                                 TextWrapping="Wrap"
                                 FontSize="18"
                                 FontWeight="Bold"
                                 VerticalContentAlignment="Center"
                                 HorizontalContentAlignment="Center"
                                 Text="{Binding MessageContent}" />
                    </StackPanel>
                    <StackPanel Grid.Column="1"
                                Orientation="Vertical">
                        <TextBlock Text="Chọn ngày:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="5 5 2 2"
                                   TextAlignment="Center" />
                        <DatePicker FontSize="14"
                                    FontWeight="SemiBold"
                                    VerticalAlignment="Center"
                                    Margin="5"
                                    SelectedDate="{x:Static sys:DateTime.Now}"
                                    x:Name="datePickerPrinter"
                                    SelectedDateChanged="datePickerPrinter_SelectedDateChanged" />
                        <TextBlock Text="Chọn ca sản xuất:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="5 5 2 2"
                                   TextAlignment="Center" />
                        <ComboBox Margin="5"
                                  FontSize="14"
                                  FontWeight="SemiBold" 
                                  Name="cbbProductionShift"/>
                    </StackPanel>
                </Grid>
                <Grid VerticalAlignment="Center"
                      Margin="5 5 5 5"
                      Grid.Row="1">
                    <Button Style="{StaticResource NewPopupButtonStyle}"
                            Width="190"
                            Height="35"
                            IsEnabled="{Binding PrintHeadState, Converter={StaticResource PrinterStateToBooleanConverter}}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="20 5 5 5"
                            Content="Đẩy bản tin"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            x:Name="btnPushMessage"
                            Click="btnPushMessage_Click"/>
                    <Button Style="{StaticResource NewPopupButtonStyle}"
                            Background="{Binding PrintHeadState, Converter={StaticResource PrinterStateToBackgroundButtonConverter}}"
                            Width="160"
                            Height="35"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Margin="5 5 20 5"
                            Content="{Binding PrintHeadState, Converter={StaticResource PrinterStateToTextButtonConverter}}"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White" 
                            x:Name="btnPrintStartStop"
                            Click="btnPrintStartStop_Click"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
