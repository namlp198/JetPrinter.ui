    <Setter.Value>
        <DataTemplate>
            <Border>
                <TextBlock Text="{Binding}" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Border>
        </DataTemplate>
    </Setter.Value>
</Setter>-->
    </Style>
</ResourceDictionary>